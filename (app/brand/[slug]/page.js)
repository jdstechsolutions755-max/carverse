import brands from "@/data/brands.json"
import cars from "@/data/cars.json"
import Link from "next/link"

export async function generateStaticParams() {
  return brands.map((brand) => ({ slug: brand.slug }))
}

export default function BrandPage({ params }) {
  const brand = brands.find((b) => b.slug === params.slug)
  const brandCars = cars.filter((c) => c.brand === brand.name)

  return (
    <main className="p-8 text-white">
      <h1 className="text-3xl font-bold mb-6">{brand.name} Cars</h1>
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
        {brandCars.map((car) => (
          <Link key={car.slug} href={`/car/${car.slug}`}>
            <div className="p-4 bg-white/5 rounded hover:bg-white/10 transition">
              <h2 className="text-xl font-semibold">{car.model}</h2>
              <p className="text-gray-400">{car.year}</p>
            </div>
          </Link>
        ))}
      </div>
    </main>
  )
}
